{
  "expo": {
    "name": "VibeScribe",
    "slug": "vibescribe",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.theindiequill.vibescribe",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow VibeScribe to record your legacy stories.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.theindiequill.vibescribe",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow VibeScribe to record your legacy stories."
        }
      ]
    ],
    "extra": {
      "apiBaseUrl": "https://the-indie-quill-collective.onrender.com",
      "eas": {
        "projectId": "9b66cbc1-fe5b-4a3a-8042-fe9130439f37"
      }
    },
    "owner": "mcjon"
  }
}
