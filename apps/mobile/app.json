{
  "expo": {
    "name": "VibeScribe",
    "slug": "vibescribe",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "vibescribe",
    "owner": "mcjon",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1B2A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.theindiequill.vibescribe",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "VibeScribe needs access to your microphone to record your voice and transcribe your stories.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D1B2A"
      },
      "package": "com.indiequill.vibescribe",
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "VibeScribe needs your microphone to record your voice."
        }
      ],
      "expo-asset",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "9b66cbc1-fe5b-4a3a-8042-fe9130439f37"
      },
      "router": {
        "origin": false
      }
    },
    "runtimeVersion": "1.0.0"
  }
}
